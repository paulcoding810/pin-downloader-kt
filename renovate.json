{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [
    "0 0 1 1 *"
  ],
  "automerge": false,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "gradle"
      ],
      "groupName": "Gradle Dependencies",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": false
    }
  ],
  "platformAutomerge": false
}
